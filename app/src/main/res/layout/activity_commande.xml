<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ClientMenu.CommandeActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:src="@drawable/arrow__left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText

        android:id="@+id/edt_nomClient"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/edt_nom"
        style="@style/input_style"
        app:layout_constraintTop_toBottomOf="@+id/img_back"

        />
    <EditText

        android:id="@+id/edt_numTLF"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="@string/edt_num"
        style="@style/input_style"
        app:layout_constraintTop_toBottomOf="@+id/edt_nomClient"

        />
    <EditText

        android:id="@+id/edt_adress"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/edt_adresse"
        style="@style/input_style"
        app:layout_constraintTop_toBottomOf="@+id/edt_numTLF"

        />
    <EditText

        android:id="@+id/edt_region"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/edt_region"
        style="@style/input_style"
        app:layout_constraintTop_toBottomOf="@+id/edt_adress"

        />
    <TextView
        android:id="@+id/tv_catt"
        android:layout_width="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_region"
        android:text="Livraison :"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_app_choice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_catt">

        <RadioGroup
            android:id="@+id/radioGroup_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/radioButton_domicile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="@string/rd_dom" />

            <RadioButton
                android:id="@+id/radioButton_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="@string/rd_place" />
            <RadioButton
                android:id="@+id/radioButton_emporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="@string/rb_emp" />



        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit_command"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectange_gradient"
        app:layout_constraintTop_toBottomOf="@+id/rl_app_choice"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_comm"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>